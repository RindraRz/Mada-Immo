@using Mada_immo.Models.includes;
<div class="col-lg-12">

  <div class="row">
    <div class="card w-100">
      <div class="card-body p-4">
        <h5 class="card-title fw-semibold mb-4">Liste locations
        </h5>
        <div class="table-responsive">
          <table class="table text-nowrap mb-0 align-middle ">
            <thead class="text-dark fs-4">
              <tr>
                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">Mois</h6>
                </th>
                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">Loyer</h6>
                </th>
                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">Commission</h6>
                </th>

                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">Numero de mois location </h6>
                </th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in @Model.Details)
              {

                <tr class="@IsPayee(item.EstPayee)">
                  <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">@item.Mois</h6>
                  </td>
                  <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">@item.Loyer</h6>
                  </td>
                  <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">@item.Commission %</h6>
                  </td>

                  <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">@item.NumMoisLocation</h6>
                  </td>

                </tr>

              }

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

@functions {
  string IsPayee(bool t)
  {
    if (t)
    {
      return "bg bg-success";
    }
    return "bg bg-warning";
  }
}