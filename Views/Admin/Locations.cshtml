@using Mada_immo.Models.includes;
<div class="col-lg-12">

  <div class="row">
    <div class="card w-100">
      <div class="card-body p-4">
        <h5 class="card-title fw-semibold mb-4">Liste locations
        </h5>
        <div class="table-responsive">
          <table class="table text-nowrap mb-0 align-middle ">
            <thead class="text-dark fs-4">
              <tr>
                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">Client id</h6>
                </th>
                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">Duree</h6>
                </th>
                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">Date debut</h6>
                </th>
                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">Bien </h6>
                </th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in @Model.Locations)
              {

                <tr class="">
                  <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">@item.ClientId</h6>
                  </td>
                  <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">@item.Duree mois</h6>
                  </td>
                  <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">@item.DateDebut</h6>
                  </td>
                  <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">@item.BienIdNavigation.Reference</h6>
                  </td>
                  <td class="border-bottom-0">
                    <a class="bg bg-primary " asp-action="Detail" asp-controller="Admin"
                      asp-route-idLocation="@item.LocationId">
                      <h6 class="fw-semibold mb-0">Voir detail</h6>
                    </a>
                  </td>
                </tr>

              }

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

@functions {
  string GetNb(bool t)
  {
    if (t)
    {
      return "bg bg-success";
    }
    return "";
  }
}